@model MoonlightGID.Models.JobsReviewRepository

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Job Name - @Model.Jobs[0].JobId
            </dt>
            <dd class="col-sm-10">
                @Model.Jobs[0].JobName
            </dd>
            <dt class="col-sm-2">
                Job Category
            </dt>
            <dd class="col-sm-10">
                @Model.Jobs[0].JobType
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Jobs[0].Description
            </dd>
            <dt class="col-sm-2">
                Estimated Price
            </dt>
            <dd class="col-sm-10">
                @Model.Jobs[0].Price
            </dd>
            <dt class="col-sm-2">
                Service Provider
            </dt>
            <dd class="col-sm-10">
                @Model.Jobs[0].Company.CompanyLogin
            </dd>
            <dt class="col-sm-2">
                Reviews:
            </dt>
            <dd></dd>
        </dl>
        @foreach (Reviews r in Model.Reviews)
        {
            <table class="table">
                <tbody>
                    <tr>
                        <td class="col-sm-10">@r.ReviewContent</td>
                        <td class="col-sm-2">Rating: @r.Rating</td>
                    </tr>
                </tbody>
            </table>
        }
        <hr />
        <form asp-action="Contact">
            <input type="hidden" name="i" value="@Model.Jobs[0].JobId" />
            <button type="submit" class="btn btn-primary" value="@Model.Jobs[0].JobId">Contact @Model.Jobs[0].Company.CompanyName</button>
        </form>&nbsp;
        <form asp-action="SearchResults">
            <input type="hidden" name="desc" value="@Model.Jobs[0].JobType" />
            <button type="submit" class="btn btn-primary" value="@Model.Jobs[0].JobType"> Return to the List</button>
        </form>
    </div>
