@model Customers

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome to</h1>
    <img src="~/img/pgo.png" style="padding-left:5%;width:550px;height:200px;"/>
    
</div>

<div class="text-center" asp-action="Index">
    <form method="post">
        <input asp-for="@Model.CustomerId" type="hidden" />
        <div class="form-group">
            <h2> Log In</h2>
            <h4 class="text-danger">@ViewBag.errorMessage</h4>
            <label asp-for="@Model.UserLogin" class="control-label"></label>
            <input asp-for="@Model.UserLogin" class="form-control"/>
            <span asp-validation-for="@Model.UserLogin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password" class="control-label"></label>
            <input type="password"asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Log In" class="btn btn-primary" />
            &nbsp;
            <a href="Registration">Registration</a>
        </div>
    </form>
</div>